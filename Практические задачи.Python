-- Задание 4 из 9

# Стоимость заказов, оформленных с мобильных и стационарных устройств
mobile_orders = [990, 1150, 820, 890, 1350, 750, 1040, 1280]
desktop_orders = [1010, 1327, 1370, 920, 890, 1390, 790, 860, 970, 1250]

# Создайте функцию count_expensive_orders(), которая принимает список заказов и сумму,
# а возвращает количество заказов, превышающих эту сумму
def count_expensive_orders(orders, threshold):
    count = 0
    for order in orders:
        if order > threshold:
            count += 1
    return count

# Используйте функцию для подсчёта дорогих заказов для каждого типа устройств
mobile_count = count_expensive_orders(mobile_orders, 1000)
desktop_count = count_expensive_orders(desktop_orders, 1000)

# Выводим результаты
print(f'Количество дорогих заказов для мобильных устройств: {mobile_count}')
print(f'Количество дорогих заказов для стационарных устройств: {desktop_count}')



-- Задание 5 из 9

# Стоимость заказов, оформленных с мобильных и стационарных устройств
mobile_orders = [990, 1150, 820, 890, 1350, 750, 1040, 1280]
desktop_orders = [1010, 1327, 1370, 920, 890, 1390, 790, 860, 1250]

# Определим функцию count_expensive_orders()
def count_expensive_orders(orders, threshold):
    count = 0
    for order in orders:
        if order > threshold:
            count = count + 1
    ratio = count / len(orders)
    return count, ratio

# Используем функцию
mobile_count, mobile_ratio = count_expensive_orders(mobile_orders, 1000)
desktop_count, desktop_ratio = count_expensive_orders(desktop_orders, 1000)

# Выводим результаты
print(f'Количество дорогих заказов для мобильных устройств: {mobile_count}')
print(f'Доля дорогих заказов для мобильных устройств: {mobile_ratio:.2f}')
print(f'Количество дорогих заказов для стационарных устройств: {desktop_count}')
print(f'Доля дорогих заказов для стационарных устройств: {desktop_ratio:.2f}')



